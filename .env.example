# Flask Environment
FLASK_ENV=development
FLASK_APP=run.py

# Database
DATABASE_URL=sqlite:///fair_scan.db

# Secret Key (Generate a random secure key in production)
SECRET_KEY=your-secret-key-here-generate-in-production

# Email Configuration (Gmail example - use App Password, not your regular password)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_DEFAULT_SENDER=noreply@fairscan.com

# Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# Server Configuration
PORT=5000
